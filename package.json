  "description": "Production-ready Node.js monolithic server template with Express, Sequelize, and JWT authentication",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "prod": "NODE_ENV=production node src/server.js",
